<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <!-- for above two buttons -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNewOrder"
            android:text="@string/btnNewOrder"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnNewItem"
            android:text="@string/btnNewItem"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- for items' description -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textItem"
            android:text="@string/textItem"
            android:paddingRight="16dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <AutoCompleteTextView
            android:id="@+id/editItem"
            android:hint="@string/hintTextItem"
            android:text="@string/editItem"
            android:layout_weight="1"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- for quantity -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textQuantity"
            android:text="@string/textQuantity"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/editQuantity"
            android:layout_gravity="right"
            android:gravity="right"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:text="@string/editQuantity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- for unit price -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textUnitPrice"
            android:textSize="20sp"
            android:text="@string/textUnitPrice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/editUnitPrice"
            android:layout_gravity="right"
            android:gravity="right"
            android:inputType="numberDecimal"
            android:imeOptions="actionDone"
            android:text="@string/editUnitPrice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- for total price -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTotal"
            android:text="@string/btnTotal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textTotal"
            android:text="@string/textTotal"
            android:layout_gravity="right"
            android:gravity="right"
            android:textSize="40dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- for summary -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textSummary"
            android:text="@string/textSummary"
            android:gravity="left"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
